        </backstoryFiltersOverride>
        <inventoryOptions>
            <skipChance>0.70</skipChance>
            <subOptionsChooseOne>
                <li>
                    <thingDef>FCP_Currency_NCR_Dollar</thingDef>
                    <countRange>10~50</countRange>
                </li>
                <li>
                    <thingDef>FCP_Currency_Caps</thingDef>
                    <countRange>15~50</countRange>
                </li>
