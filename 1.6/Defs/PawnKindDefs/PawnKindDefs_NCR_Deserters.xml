    <!-- Deserter Colonel -->

    <PawnKindDef ParentName="FCP_NCRkindBase">
        <defName>FCP_Pawnkind_NCR_Deserter_Colonel</defName>
        <label>rogue colonel</label>
        <factionLeader>true</factionLeader>
        <race>Human</race>
        <combatPower>250</combatPower>
        <defaultFactionType>FCP_Faction_NCR_Deserters</defaultFactionType>
        <gearHealthRange>0.9~1.0</gearHealthRange>
        <apparelMoney>300</apparelMoney>
        <weaponMoney>999</weaponMoney>
        <invFoodDef>MealSurvivalPack</invFoodDef>
        <apparelTags>
            <li>FCP_NCR_Trooper</li>
            <li>FCP_NCR_Deserter</li>
        </apparelTags>
        <apparelRequired>
            <li>FCP_Apparel_NCR_Beret</li>
        </apparelRequired>
        <weaponTags>
            <li>FCP_NCR_Service_Rifle</li>
        </weaponTags>
        <requiredWorkTags>
            <li>Violent</li>
        </requiredWorkTags>
        <initialResistanceRange>10~30</initialResistanceRange>
        <initialWillRange>10~30</initialWillRange>
        <backstoryFiltersOverride>
            <li>
                <categoriesChildhood>
                    <li>FCP_Backstory_NCR_Child</li>
                    <li>FCP_Backstory_Wastelander_Child</li>
                </categoriesChildhood>
                <categoriesAdulthood>
                    <li>FCP_Backstory_NCR_Deserter_Colonel</li>
                </categoriesAdulthood>
            </li>
        </backstoryFiltersOverride>
        <inventoryOptions>
            <skipChance>0.60</skipChance>
            <subOptionsChooseOne>
                <li>
                    <thingDef>FCP_Currency_NCR_Dollar</thingDef>
                    <countRange>20~80</countRange>
                </li>
                <li>
                    <thingDef>FCP_Currency_Caps</thingDef>
                    <countRange>25~70</countRange>
                </li>
                <li>
                    <thingDef>MealSurvivalPack</thingDef>
                    <countRange>2~4</countRange>
                </li>
                <li>
                    <thingDef>MedicineIndustrial</thingDef>
                    <countRange>2~3</countRange>
                </li>
            </subOptionsChooseOne>
        </inventoryOptions>
    </PawnKindDef>

</Defs>
