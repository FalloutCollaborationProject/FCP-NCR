<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--__________ NCR Deserters Pawnkinds __________-->

    <!-- Deserter Trooper -->

    <PawnKindDef ParentName="FCP_NCRkindBase">
        <defName>FCP_Pawnkind_NCR_Deserter_Trooper</defName>
        <label>deserter trooper</label>
        <race>Human</race>
        <combatPower>120</combatPower>
        <defaultFactionType>FCP_Faction_NCR_Deserters</defaultFactionType>
        <gearHealthRange>0.7~1.0</gearHealthRange>
        <apparelMoney>100</apparelMoney>
        <weaponMoney>999</weaponMoney>
        <invFoodDef>MealSurvivalPack</invFoodDef>
        <apparelTags>
            <li>FCP_NCR_Trooper</li>
            <li>FCP_NCR_Deserter</li>
        </apparelTags>
        <weaponTags>
            <li>FCP_NCR_Service_Rifle</li>
        </weaponTags>
        <requiredWorkTags>
            <li>Violent</li>
        </requiredWorkTags>
        <initialResistanceRange>10~30</initialResistanceRange>
        <initialWillRange>10~30</initialWillRange>
        <backstoryFiltersOverride>
            <li>
                <categoriesChildhood>
                    <li>FCP_Backstory_NCR_Child</li>
                    <li>FCP_Backstory_Wastelander_Child</li>
                </categoriesChildhood>
                <categoriesAdulthood>
                    <li>FCP_Backstory_NCR_Deserter_Trooper</li>
                </categoriesAdulthood>
            </li>
        </backstoryFiltersOverride>
        <inventoryOptions>
            <skipChance>0.75</skipChance>
            <subOptionsChooseOne>
                <li>
                    <thingDef>FCP_Currency_NCR_Dollar</thingDef>
                    <countRange>5~30</countRange>
                </li>
                <li>
                    <thingDef>FCP_Currency_Caps</thingDef>
                    <countRange>10~40</countRange>
                </li>
                <li>
                    <thingDef>MealSurvivalPack</thingDef>
                    <countRange>1~2</countRange>
                </li>
            </subOptionsChooseOne>
        </inventoryOptions>
    </PawnKindDef>

