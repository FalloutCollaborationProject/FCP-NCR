        <invFoodDef>MealSurvivalPack</invFoodDef>
        <apparelTags>
            <li>FCP_NCR_Trooper</li>
            <li>FCP_NCR_Deserter</li>
        </apparelTags>
        <weaponTags>
            <li>FCP_NCR_Service_Rifle</li>
        </weaponTags>
        <requiredWorkTags>
            <li>Violent</li>
        </requiredWorkTags>
        <initialResistanceRange>10~30</initialResistanceRange>
        <initialWillRange>10~30</initialWillRange>
        <backstoryFiltersOverride>
            <li>
                <categoriesChildhood>
                    <li>FCP_Backstory_NCR_Child</li>
                    <li>FCP_Backstory_Wastelander_Child</li>
