    <!-- Brahmin Herder -->

    <TraderKindDef>
        <defName>FCP_Caravan_Brahmin_Herder</defName>
        <label>Brahmin Herder</label>
        <stockGenerators>

            <!-- Animals -->

            <li Class="StockGenerator_Animals">
                <tradeTagsSell>
                    <li>FCP_Animal_Farm_Brahmin</li>
                </tradeTagsSell>
                <tradeTagsBuy>
                    <li>AnimalUncommon</li>
                    <li>AnimalExotic</li>
                </tradeTagsBuy>
